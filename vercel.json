{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["db.json"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server.js"
    },
    {
      "source": "/(?!api)(.*)",
      "headers": { "cache-control": "s-maxage=1, stale-while-revalidate" },
      "continue": true
    },
    {
      "source": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "destination": "/$1"
    }
  ]
}
